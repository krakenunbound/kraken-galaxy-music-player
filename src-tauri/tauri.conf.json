{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kraken Galaxy Music Player",
  "identifier": "com.kraken.godofmusic",
  "version": "1.0.0",
  "build": {
    "frontendDist": "../",
    "devUrl": "http://localhost:8000"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Kraken Galaxy Music Player",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}